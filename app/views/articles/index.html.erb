<div class='container'>
  <h1>Articles</h1>
  <p>Feel free to post any interesting articles you like.</p>
  
  <form class="form-inline">
    <table class="pull-right">
      <tr>
        <td>
        <input type="text" class="form-control" id="search" name="search" placeholder="Search Articles" value="<%=params[:search].strip if params[:search]%>">
        </td>
        <td style="padding-left: 5px;">
        <button type="submit" class="btn btn-default">Search</button>
        </td>
        </tr>
    </table>
  </form>
  
  <div class="pull-right" > </div>
  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Text</th>
        <th>Added</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @articles.each do |article| %>
        <tr>
          <td><%= article.title %></td>
          <td><%= raw article.text %></td>
          <td width="132"><%= article.created_at.strftime('%Y-%m-%d %H:%M') %></td>
          <td width="40"><a href="<%= article_path(article) %>"><span class="glyphicon glyphicon-chevron-right"></span></a></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div align="right">
    <%= paginate @articles, :theme => 'twitter-bootstrap-3' %>
  </div>

  <%= link_to 'New Article', new_article_path, class: 'btn btn-primary' %>

  </div>